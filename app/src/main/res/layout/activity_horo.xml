<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="com.example.mobiapp.newhoroscope.activity.HoroActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="56dp"
        android:background="@color/space_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/space_white"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/relZnack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="Знак зодиака"
                    android:textColor="@color/space_white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/horoscope1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerZnack"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/relType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/textView123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView44324"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/imageView44324"
                    android:layout_toRightOf="@+id/imageView44324"
                    android:text="Тип гороскопа"
                    android:textColor="@color/space_white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView44324"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/type_horoskope" />

                <ImageView
                    android:id="@+id/imageView32131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerType"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relDay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/textView1234"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView443245"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/imageView443245"
                    android:layout_toRightOf="@+id/imageView443245"
                    android:text="День"
                    android:textColor="@color/space_white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView443245"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/day" />

                <ImageView
                    android:id="@+id/imageView321312"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerDay"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone">


            </android.support.v7.widget.RecyclerView>

            <ProgressBar
                android:id="@+id/progress.horo"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_horo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Гороскоп"
                android:textColor="@color/default_active_item_color"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_horo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Гороскоп - астрономически рассчитанная схема расположения планет на небе в момент рождения человека, составляемая для астрологических предсказаний судьбы человека, какого-либо события и т.п."
                android:textSize="16sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_light_background"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8644281007634725/3938889297" />

</RelativeLayout>
